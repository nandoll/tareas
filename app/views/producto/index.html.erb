<h1 class="mt-3 mb-3">Listado de productos</h1>
<table class="table table-striped table-dark table-bordered">
        <thead>
            <tr>
                <th>Categoria</th>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Precio de venta</th>
                <th>Acciones</th>
            </tr>            
        </thead>
        <tbody>            
            <% @objProductos.each do |item| %>
                <tr>
                    <td><%= item.categoria %></td>
                    <td><%= item.nombre %></td>
                    <td><%= item.precio %></td>
                    <td><%= item.precio_venta %>        </td>
                    <td> 
                        <%= link_to 'editar', producto_editar_path(item), class: "btn btn-warning" %>
                        <%= link_to 'eliminar', {action: :eliminar, id: item.id}, method: :delete, data:{confirm:'Desea eliminar el producto?'} , class: "btn btn-danger" %>
                    </td>
                </tr>
            <% end %>            
        </tbody>
</table>

<%= link_to 'Nuevo producto', producto_nuevo_path, class: "btn btn-success" %>